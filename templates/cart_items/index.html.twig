{% extends 'base.html.twig' %}

{% block title %}CartItems index{% endblock %}

{% block body %}
    <h1>CartItems index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantity</th>
                <th>PriceWhenBought</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cart_item in cart_items %}
            <tr>
                <td>{{ cart_item.id }}</td>
                <td>{{ cart_item.Quantity }}</td>
                <td>{{ cart_item.PriceWhenBought }}</td>
                <td>
                    <a href="{{ path('cart_items_show', {'id': cart_item.id}) }}">show</a>
                    <a href="{{ path('cart_items_edit', {'id': cart_item.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cart_items_new') }}">Create new</a>
{% endblock %}
