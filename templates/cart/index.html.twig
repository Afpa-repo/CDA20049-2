{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <div class="center"><h1>YOUR CART</h1></div>

    {% if items |length > 0 %}
        <div class="container">
        <table class="table">
            <thead>
                <tr>
                    <th>Photo</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    <td><img src="/pictures/{{ item.product.picture }}" alt="{{ item.product.picture }}" ></td>
                    <td>{{ item.product.name }}</td>
                    <td>{{ item.product.price }}</td>
                    <td>{{ item.quantity }}</td>
                    <td>{{ item.product.price * item.quantity }}</td>
                    <td><a class="btn" href="{{ path('cart_remove', {'id': item.product.id}) }}"><i class="fas fa-trash"></i></td>
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td>Total:</td>
                <td>{{ total }}</td>
            </tr>
            </tfoot>
        </table>
        </div>
    {% else %}
        <h2 class="center">YOUR CART IS EMPTY</h2>
    {% endif %}







{% endblock %}
