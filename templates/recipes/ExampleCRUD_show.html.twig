{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
    <h1>Recipes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>IdCategory</th>
                <td>{{ recipe.idCategory }}</td>
            </tr>
            <tr>
                <th>IdAuthor</th>
                <td>{{ recipe.idAuthor }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.name }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ recipe.picture }}</td>
            </tr>
            <tr>
                <th>Instructions</th>
                <td>{{ recipe.instructions ? recipe.instructions|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('recipes_index') }}">back to list</a>

    <a href="{{ path('recipes_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipes/_delete_form.html.twig') }}
{% endblock %}
