{% extends 'base.html.twig' %}

{% block title %}Recipes index{% endblock %}

{% block body %}
    <h1>Recipes index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>IdCategory</th>
                <th>IdAuthor</th>
                <th>Name</th>
                <th>Picture</th>
                <th>Instructions</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for recipe in recipes %}
            <tr>
                <td>{{ recipe.id }}</td>
                <td>{{ recipe.idCategory }}</td>
                <td>{{ recipe.idAuthor }}</td>
                <td>{{ recipe.name }}</td>
                <td>{{ recipe.picture }}</td>
                <td>{{ recipe.instructions ? recipe.instructions|json_encode : '' }}</td>
                <td>
                    <a href="{{ path('recipes_show', {'id': recipe.id}) }}">show</a>
                    <a href="{{ path('recipes_edit', {'id': recipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('recipes_new') }}">Create new</a>
{% endblock %}
